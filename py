import folium from flask import Flask, render_template app = Flask(__name__) # Create a Folium map m = folium.Map(location=[20, 0], tiles="OpenStreetMap", zoom_start=2) # Create a Pandas dataframe with data data = pd.DataFrame({ 'lon': [-58, 2, 145, 30.32, -4.03, -73.57, 36.82, -38.5], 'lat': [-34, 49, -38, 59.93, 5.33, 45.52, -1.29, -12.97], 'name': ['Buenos Aires', 'Paris', 'Melbourne', 'St Petersbourg', 'Abidjan', 'Montreal', 'Nairobi', 'Salvador'], 'value': [10, 12, 40, 70, 23, 43, 100, 43] }) # Add markers to the map for i in range(0, len(data)): html = f""" <h1>{data.iloc[i]['name']}</h1> <p>You can use any html here! Let's do a list:</p> <ul> <li>Item 1</li> <li>Item 2</li> </ul> </p> <p>And that's a <a href="https://python-graph-gallery.com">link</a></p> """ iframe = folium.IFrame(html=html, width=200, height=200) popup = folium.Popup(iframe, max_width=2650) folium.Marker( location=[data.iloc[i]['lat'], data.iloc[i]['lon']], popup=popup, icon=folium.DivIcon(html=f""" <div><svg> <circle cx="50" cy="50" r="40" fill="#69b3a2" opacity=".4"/> <rect x="35", y="35" width="30" height="30", fill="red", opacity=".3" </svg></div>""") ).add_to(m) # Create a Flask route to render the map @app.route('/') def index(): return render_template('index.html', map=m._repr_html_()) if __name__ == '__main__': app.run()
